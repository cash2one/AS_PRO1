<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">
    
    <include layout="@layout/include_head" />
    
	<RelativeLayout 
	    android:layout_below="@+id/relativelayout1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/activity_register_sendcode_relativelayout_margin">
	    <ImageView 
		    android:id="@+id/seperate_line1"
		    android:layout_below="@+id/layout_header"
		    android:layout_marginTop="10dip"
			android:background="@drawable/seperate_line_2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
	    <LinearLayout 
	        android:id="@+id/layout_phone"
	        android:layout_below="@+id/seperate_line1"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/activity_login_username_height"
	        android:background="@color/half_white"
	        android:orientation="horizontal">
	        <RelativeLayout
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="2">
	            <ImageView 
	                android:id="@+id/image1"
	                android:src="@drawable/icon_phone_focus"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerInParent="true"/>
	        </RelativeLayout>
	        <RelativeLayout
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="9">
		        <EditText
		            android:id="@+id/input_phone"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:paddingLeft="10dip"
		            android:layout_marginBottom="2dip"
		            android:textSize="@dimen/activity_input_pass_edittext"
		            android:textColor="@color/black"
		            android:singleLine="true"
		            android:inputType="phone"
		            android:background="@null"
		            android:hint="@string/hint_input_phone"
	                android:imeOptions="actionNext"
	                android:nextFocusDown="@+id/input_password"/>
	        </RelativeLayout>
	    </LinearLayout>
	    <ImageView 
            android:id="@+id/seperate_line2"
	    	android:layout_below="@+id/layout_phone"
            android:background="@drawable/seperate_line_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
	    <LinearLayout 
	        android:id="@+id/layout_code"
	        android:layout_below="@+id/seperate_line2"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/activity_login_password_height"
	        android:background="@color/half_white"
	        android:orientation="horizontal">
	        <RelativeLayout
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="2">
		        <ImageView 
		            android:id="@+id/image2"
		            android:src="@drawable/icon_password"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerInParent="true"/>
	        </RelativeLayout>
	        <RelativeLayout
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:layout_weight="9">
		        <EditText
		            android:id="@+id/input_code"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:paddingLeft="10dip"
		            android:layout_marginBottom="2dip"
		            android:textSize="@dimen/activity_input_pass_edittext"
		            android:textColor="@color/black"
		            android:singleLine="true"
		            android:background="@null"
		            android:hint="@string/hint_input_phone_code"
	                android:imeOptions="actionDone"
	                android:inputType="text" 
	                android:nextFocusDown="@+id/login"/>
	        </RelativeLayout>
	    </LinearLayout>
	    <ImageView 
            android:id="@+id/seperate_line3"
	    	android:layout_below="@+id/layout_code"
            android:background="@drawable/seperate_line_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
	    <RelativeLayout 
	        android:id="@+id/layout_getcode"
	        android:layout_below="@+id/seperate_line3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:paddingRight="20dip">
	        <Button 
	            android:id="@+id/get_code"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/get_code"
	            android:layout_alignParentRight="true"
	            android:background="@drawable/noraml_btn"
	            android:textColor="@color/black"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:id="@+id/layout_submit"
	        android:layout_below="@+id/layout_getcode"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dip">
	        <Button 
	            android:id="@+id/submit"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/circle_btn_red"
	            android:text="@string/sure"
	            android:layout_centerHorizontal="true"
	            android:textSize="@dimen/activity_input_pass_button"
	            android:textColor="@color/white"
	            android:layout_marginLeft="20dip"
	            android:layout_marginRight="20dip"/>
	    </RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
