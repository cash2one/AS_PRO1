<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <include layout="@layout/include_head"/>
    <com.linkage.ui.widget.PullToRefreshScrollView 
        xmlns:android="http://schemas.android.com/apk/res/android"
   		xmlns:ptr="http://schemas.android.com/apk/res-auto"
   		android:id="@+id/pullScrollView"
   		android:layout_below="@+id/relativelayout1"
   		android:layout_width="fill_parent"
   		android:layout_height="fill_parent">
        <RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
		    <RelativeLayout
		        android:id="@+id/relativelayout2"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:background="@color/white_gray"
		    	android:padding="5dip">
		        <TextView 
		            android:id="@+id/pay_school_class"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_centerInParent="true"
		    		android:text="cccc"
		    		android:textColor="@color/dark_gray"/>
		    </RelativeLayout>
		    <RelativeLayout
		        android:id="@+id/relativelayout3"
		        android:layout_below="@+id/relativelayout2"
		        android:layout_width="fill_parent"
		    	android:layout_height="@dimen/common_item_height_big"
		    	android:background="@color/white">
		        <RelativeLayout 
		            android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:background="@color/white"
			    	android:gravity="center"
			    	android:padding="5dip">
			        <ImageView 
			            android:id="@+id/pay_picture"
			            android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_centerVertical="true"
			    		android:src="@drawable/default_user"/>
			        <TextView 
			            android:id="@+id/pay_name"
			            android:layout_toRightOf="@+id/pay_picture"
			            android:layout_marginTop="5dip"
			            android:layout_marginLeft="10dip"
			            android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:text="cccc"
			    		android:textColor="@color/black"
			    		android:textSize="16sp"/>
			        <TextView 
			            android:id="@+id/pay_money"
			            android:layout_toRightOf="@+id/pay_picture"
			            android:layout_below="@+id/pay_name"
			            android:layout_marginTop="5dip"
			            android:layout_marginLeft="10dip"
			            android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:text="cccc"
			    		android:textColor="@color/red"
			    		android:textSize="16sp"/>
		        </RelativeLayout>
		        <ImageView 
		            android:layout_width="fill_parent"
		    		android:layout_height="wrap_content"
		    		android:layout_alignParentBottom="true"
		    		android:src="@drawable/seperate_line"/>
		    </RelativeLayout>
		    <RelativeLayout
		        android:id="@+id/relativelayout4"
		        android:layout_below="@+id/relativelayout3"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:minHeight="@dimen/common_item_height_big"
		    	android:background="@color/white">
		        <RelativeLayout 
		            android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:background="@color/white"
			    	android:padding="5dip">
			        <TextView 
			            android:id="@+id/pay_desc"
			            android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_marginLeft="5dip"
			    		android:text=""
			    		android:textColor="@color/black"
			    		android:textSize="15sp"/>
		        </RelativeLayout>
		    </RelativeLayout>
		    <ImageView 
		        android:id="@+id/seperate_line4"
		        android:layout_below="@+id/relativelayout4"
	            android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:src="@drawable/seperate_line"/>
		    <RelativeLayout
		        android:id="@+id/relativelayout5"
		        android:layout_below="@+id/seperate_line4"
		        android:layout_width="fill_parent"
		    	android:layout_height="@dimen/common_item_height_big"
		    	android:background="@color/white">
		        <RelativeLayout 
		            android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:background="@color/white"
			    	android:layout_centerVertical="true"
			    	android:layout_marginTop="5dip"
			    	android:layout_marginBottom="5dip"
			    	android:padding="5dip">
			        <TextView 
			            android:id="@+id/pay_start_text"
			            android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_alignParentLeft="true"
			    		android:layout_marginLeft="5dip"
			    		android:text="开始缴费日期："
			    		android:textColor="@color/black"
			    		android:textSize="15sp"/>
			        <TextView 
			            android:id="@+id/pay_start"
			            android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_alignParentRight="true"
			    		android:layout_marginRight="5dip"
			    		android:text="cccc"
			    		android:textColor="@color/black"
			    		android:textSize="15sp"/>
			        <TextView 
			            android:id="@+id/pay_end_text"
			            android:layout_below="@+id/pay_start_text"
			            android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_alignParentLeft="true"
			    		android:layout_marginLeft="5dip"
			    		android:text="结束缴费日期"
			    		android:textColor="@color/black"
			    		android:textSize="15sp"/>
			        <TextView 
			            android:id="@+id/pay_end"
			            android:layout_below="@+id/pay_start"
			            android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:layout_alignParentRight="true"
			    		android:layout_marginRight="5dip"
			    		android:text="cccc"
			    		android:textColor="@color/black"
			    		android:textSize="15sp"/>
		        </RelativeLayout>
		        <ImageView 
		            android:layout_width="fill_parent"
		    		android:layout_height="wrap_content"
		    		android:layout_alignParentBottom="true"
		    		android:src="@drawable/seperate_line"/>
		    </RelativeLayout>
		    <RelativeLayout
		        android:id="@+id/relativelayout6"
		        android:layout_below="@+id/relativelayout5"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:paddingTop="10dip"
		    	android:paddingBottom="10dip"
		    	android:background="@color/white">
		        <RelativeLayout 
		            android:id="@+id/pay_unionpay"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_marginRight="10dip"
			        android:layout_marginBottom="10dip"
			        android:gravity="center"
			        android:background="@drawable/button_blue"
			        android:clickable="true">
			        <ImageView 
			            android:id="@+id/ic_uniopnpay"
			            android:src="@drawable/ic_unionpay"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"/>
			        <TextView android:layout_toRightOf="@+id/ic_uniopnpay"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="15dip"
			            android:text="银联支付"
			            android:textColor="@color/white"
			            android:textSize="15sp"/>
		       	</RelativeLayout>
		        <RelativeLayout 
		            android:id="@+id/pay_alipay"
		            android:layout_below="@+id/pay_unionpay"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_marginRight="10dip"
			        android:layout_marginBottom="10dip"
			        android:gravity="center"
			        android:background="@drawable/button_blue"
			        android:clickable="true">
			        <ImageView 
			            android:id="@+id/ic_alipay"
			            android:src="@drawable/ic_alipay"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            />
			        <TextView android:layout_toRightOf="@+id/ic_alipay"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="15dip"
			            android:text="支付宝支付"
			            android:textColor="@color/white"
			            android:textSize="15sp"/>
		       	</RelativeLayout>
		        <Button 
		            android:id="@+id/pay_reject"
		            android:layout_below="@+id/pay_alipay"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dip"
			        android:layout_marginRight="10dip"
			        android:background="@drawable/button_gray"
			        android:text="忽略"
			        android:textColor="@color/dark_gray"
			        android:textSize="15sp"/>
		    </RelativeLayout>
		</RelativeLayout>
	</com.linkage.ui.widget.PullToRefreshScrollView>
</RelativeLayout>
