<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/include_head" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/txt_clazz_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#454545"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_selector"
                    android:layout_width="@dimen/include_head_withava_jiabutton"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:gravity="center|right"
                    android:text="切换"
                    android:visibility="gone"
                    android:textColor="@color/tab_txt_press"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#d0d0d0" />
            </RelativeLayout>

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <ImageView
                            android:id="@+id/erweima_img"
                            android:layout_width="260dp"
                            android:layout_height="260dp"
                            android:src="@drawable/appdetail_icon_def" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="@color/black_little" />

                    <Button
                        android:id="@+id/save_btn"
                        android:layout_width="280dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/dialog_button_ok"
                        android:text="保存到手机"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/get_info_text"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black_little" />

                    <TextView
                        android:id="@+id/get_url_text"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_overlay" />

                    <Button
                        android:id="@+id/copy_btn"
                        android:layout_width="280dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/dialog_button_ok"
                        android:text="复制内容"
                        android:textColor="@color/white" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f6f6"
            android:visibility="gone" >

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/image1"
                android:layout_marginRight="42dp"
                android:layout_marginTop="27dp"
                android:text="对不起，暂无数据"
                android:textColor="@color/at_mid_gray"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/text"
                android:layout_below="@+id/text"
                android:layout_marginTop="13dp"
                android:gravity="right"
                android:text="您未加入任何班级"
                android:textColor="@color/at_light_dark"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/clazz_empty_bg" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout><!-- From: file:/D:/as_workspace/AS_PRO1/educloud_android_sh/res/layout/activity_clazz_invite.xml -->