<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg_color" >

	<include layout="@layout/include_head_withava" />
	
    <RelativeLayout
        android:id="@+id/head_fragment_ads"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_below="@+id/relativelayout1" >

        <include layout="@layout/head_fragment_ads" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="3dp"
        android:gravity="center"
        android:layout_below="@+id/head_fragment_ads"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/jxhd_index_homework"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/left_menu_item"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/jxhd_index_homework_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/jxhd_index_homework" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jxhd_index_homework_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="发作业"
                    android:textColor="@color/jx_home_teacher_word_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/jxhd_index_notice"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/left_menu_item"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/jxhd_index_notice_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/jxhd_index_notice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jxhd_index_notice_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="发通知"
                    android:textColor="@color/jx_home_teacher_word_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/jxhd_index_comment"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/left_menu_item"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/jxhd_index_comment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/jxhd_index_comment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jxhd_index_comment_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="发点评"
                    android:textColor="@color/jx_home_teacher_word_color" />
            </RelativeLayout>
            
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/jxhd_index_officesms"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/left_menu_item"
                android:clickable="true"
                android:gravity="center" >
				<ImageView
                    android:id="@+id/jxhd_index_officesms_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/jxhd_index_officesms" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jxhd_index_officesms_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="办公短信"
                    android:textColor="@color/jx_home_teacher_word_color" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/jxhd_index_score"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/left_menu_item"
                android:clickable="true"
                android:gravity="center" >
				<ImageView
                    android:id="@+id/jxhd_index_score_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/jxhd_index_score" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jxhd_index_score_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="成绩"
                    android:textColor="@color/jx_home_teacher_word_color" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/jxhd_index_mb"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/left_menu_item"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/jxhd_index_mb_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/jxhd_index_mb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jxhd_index_mb_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="模板管理"
                    android:textColor="@color/jx_home_teacher_word_color" />
            </RelativeLayout>
            

            <RelativeLayout
                android:id="@+id/jxhd_index_gzsj"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/left_menu_item"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/jxhd_index_gzsj_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/jxhd_index_gzsj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jxhd_index_gzsj_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="工作手机"
                    android:textColor="@color/jx_home_teacher_word_color" />
            </RelativeLayout>
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/jxhd_index_kaoqin"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/left_menu_item"
                android:clickable="true"
                android:gravity="center" >
				<ImageView
                    android:id="@+id/jxhd_index_kaoqin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/jxhd_index_attendance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jxhd_index_kaoqin_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="考勤"
                    android:textColor="@color/jx_home_teacher_word_color" />
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/left_menu_item"
                android:clickable="true"
                android:visibility="invisible"
                android:gravity="center" >
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/left_menu_item"
                android:clickable="true"
                android:visibility="invisible"
                android:gravity="center" >
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

