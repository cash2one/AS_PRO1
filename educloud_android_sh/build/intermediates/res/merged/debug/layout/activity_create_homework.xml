<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg_color">

    <include layout="@layout/include_head"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativelayout1"
        android:layout_above="@+id/jxhd_operate_tab">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:id="@+id/layout_top"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/common_list_item_bg">
	            <RelativeLayout
	                android:id="@+id/layout_receiver"
	                android:layout_alignParentTop="true"
	                android:layout_width="fill_parent"
	                android:background="@color/white"
	                android:gravity="center_vertical"
	                android:layout_height="@dimen/create_homework_height"
	                android:paddingLeft="@dimen/create_homework_left"
	                android:paddingRight="@dimen/create_homework_right">
	                <TextView
	                    android:id="@+id/text_receiver"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true"
	                    android:text="选择收件人："
	                    android:textSize="@dimen/create_homework_text"
	                    android:textColor="@color/black"/>
	                <TextView
	                    android:id="@+id/receiver"
	                    android:layout_toRightOf="@+id/text_receiver"
	                    android:layout_toLeftOf="@+id/receiver_plus"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginRight="10dp"
	                    android:singleLine="true"
                    	android:ellipsize="end"
	                    android:textSize="@dimen/create_homework_text"
	                    android:textColor="@color/create_homework_content"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"/>
	                <Button
	                    android:id="@+id/receiver_plus"
	                    android:layout_width="30dp"
	                    android:layout_height="30dp"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:background="@drawable/jxhd_add_receiver_btn"/>
	            </RelativeLayout>
	            <ImageView
	                android:id="@+id/seperate_line1"
	                android:layout_width="fill_parent"
	                android:layout_height="1px"
	                android:layout_below="@+id/layout_receiver"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:background="#c8c8c8"/>
	            <RelativeLayout
	                android:id="@+id/layout_subject"
	                android:layout_width="fill_parent"
	                android:layout_below="@+id/seperate_line1"
	                android:background="@color/white"
	                android:gravity="center_vertical"
	                android:layout_height="@dimen/create_homework_height"
	                android:paddingLeft="@dimen/create_homework_left"
	                android:paddingRight="@dimen/create_homework_right">
	
	                <TextView
	                    android:id="@+id/text_subject"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true"
	                    android:text="选择科目:"
	                    android:textSize="@dimen/create_homework_text"
	                    android:textColor="@color/black"/>
	                <TextView
	                    android:id="@+id/subject"
	                    android:layout_toLeftOf="@+id/subject_plus"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="@dimen/create_homework_text"
	                    android:textColor="@color/create_homework_content"
	                    android:layout_marginRight="10dp"
	                    android:layout_centerVertical="true"/>
	                <Button
	                    android:id="@+id/subject_plus"
	                    android:layout_width="30dp"
	                    android:layout_height="30dp"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:background="@drawable/jxhd_add_subject_btn"/>
	            </RelativeLayout>
	        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_top"
                android:layout_marginTop="@dimen/create_homework_edit_layout_margin"
                android:background="@color/white">
                <EditText
                    android:id="@+id/edit_input"
                    android:layout_width="fill_parent"
                    android:maxLength="244"
                    android:background="@null"
                    android:gravity="left|top"
                    android:layout_height="@dimen/create_homework_edit_height"
                    android:padding="@dimen/create_homework_edit_padding"
                    android:textSize="@dimen/create_homework_text"
                    android:textColor="@color/black"
                    android:hint="编辑文字内容"
                    android:textColorHint="@color/white_gray"/>
                <TextView
			        android:id="@+id/tvInputTotal"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/edit_input"
			        android:background="@color/white"
			        android:gravity="right"
			        android:padding="5dp"
			        android:text="@string/total_word"
			        android:textColor="@color/tk_mid_gray"
			        android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_pic"
                android:layout_below="@+id/layout_content"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <GridView
                    android:id="@+id/pic_gridview"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:horizontalSpacing="4dp"
                    android:verticalSpacing="4dp"
                    android:columnWidth="55dp"
                    android:cacheColorHint="#00000000"
                    android:listSelector="#00000000"
                    android:numColumns="4">

                </GridView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_voice"
                android:layout_below="@+id/layout_pic"
                android:layout_marginTop="15dp"
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layout_jxhd_voice_bg"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/jxhd_voice_bg"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/voice_txt"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:text="语音"/>
                    <ImageView
                        android:id="@+id/voice_anim_img"
                        android:layout_toRightOf="@+id/voice_txt"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chat_in_voice_playing_f3"/>
                    <Button
                        android:id="@+id/voice_delete_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/jxhd_voice_delete"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/voice_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_jxhd_voice_bg"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_timer_send"
                android:layout_below="@+id/layout_voice"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/timer_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="1分30秒"/>
                    <TextView
                        android:layout_below="@+id/timer_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="定时发送"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_save_mb"
                android:layout_below="@+id/layout_timer_send"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:id="@+id/layout_save_mb_"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/jxhd_save_mb"
                    android:layout_marginBottom="@dimen/create_homework_mb_margin"
                    android:layout_marginRight="@dimen/create_homework_mb_margin"
                    android:clickable="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="保存模板"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/jxhd_operate_tab"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/jxhd_tab_bg"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/layout_add_pic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:background="@drawable/jxhd_tab_single_bg"
            android:gravity="center">
            <ImageView
                android:id="@+id/jxhd_tab_pic_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jxhd_tab_pic"
                android:layout_centerHorizontal="true"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jxhd_tab_pic_image"
                android:text="图片"
                android:textColor="@color/common_tab_text_color"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_add_voice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:background="@drawable/jxhd_tab_single_bg"
            android:gravity="center">
            <ImageView
                android:id="@+id/jxhd_tab_voice_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jxhd_tab_voice"
                android:layout_centerHorizontal="true"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jxhd_tab_voice_image"
                android:text="语音"
                android:textColor="@color/common_tab_text_color"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_add_mb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:background="@drawable/jxhd_tab_single_bg"
            android:gravity="center">
            <ImageView
                android:id="@+id/jxhd_tab_mb_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jxhd_tab_mb"
                android:layout_centerHorizontal="true"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jxhd_tab_mb_image"
                android:text="模板"
                android:textColor="@color/common_tab_text_color"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_add_timer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:background="@drawable/jxhd_tab_single_bg"
            android:gravity="center">
            <ImageView
                android:id="@+id/jxhd_tab_timer_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jxhd_tab_timer"
                android:layout_centerHorizontal="true"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jxhd_tab_timer_image"
                android:text="定时"
                android:textColor="@color/common_tab_text_color"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_send"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:background="@drawable/jxhd_tab_send_bg"
            android:gravity="center">
            <ImageView
                android:id="@+id/jxhd_tab_send_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jxhd_tab_send"
                android:layout_centerHorizontal="true"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jxhd_tab_send_image"
                android:text="发送"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
