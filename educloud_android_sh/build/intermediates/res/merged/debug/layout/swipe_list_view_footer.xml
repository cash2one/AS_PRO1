<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/local_list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_list_item_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        android:textColor="@color/black_little"
        android:textSize="18sp" 
        android:text="点击继续加载"/>
	<ProgressBar 
	    android:id="@+id/progressBar"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    style="?android:attr/progressBarStyleSmall"
	    android:layout_centerInParent="true"
	    android:visibility="gone"/>
</RelativeLayout><!-- From: file:/E:/android_studio_workspace/Web/educloud_android_sh/res/layout/swipe_list_view_footer.xml -->