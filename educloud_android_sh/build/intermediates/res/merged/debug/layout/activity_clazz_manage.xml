<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

	<include layout="@layout/include_head"/>
	
	<RelativeLayout
        android:id="@+id/mylayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativelayout1">

        <RelativeLayout 
            android:id="@+id/group_avatar_layout"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/clazz_set_normal_height"
			android:layout_below="@+id/group_manage_layout"
			android:clickable="true"
	    	android:background="@drawable/white_bg">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="班级头像"
				android:textColor="@color/black"
				android:layout_marginLeft="10dip"/>
			<ImageView 
			    android:id="@+id/group_avatar"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/default_group"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="20dip"
			    android:layout_centerVertical="true"/>
		</RelativeLayout>
		
        <RelativeLayout 
            android:id="@+id/group_name_layout"
            android:layout_below="@+id/group_avatar_layout"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/clazz_set_normal_height"
			android:clickable="true"
	    	android:background="@drawable/white_bg">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="班级名称"
				android:textColor="@color/black"
				android:layout_marginLeft="10dip"/>
			<TextView 
			    android:id="@+id/group_name_text"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/clazz_set_margin_left"
				android:text="人"
				android:textColor="@color/black"/>
		</RelativeLayout>
		
        <RelativeLayout 
            android:id="@+id/group_grant_layout"
            android:layout_below="@+id/group_name_layout"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/clazz_set_normal_height"
			android:clickable="true"
	    	android:background="@drawable/white_bg">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="身份验证"
				android:textColor="@color/black"
				android:layout_marginLeft="10dip"/>
			<CheckBox
			    android:id="@+id/checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/MyCheckBox"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="20dip"/>
		</RelativeLayout>
		
        <RelativeLayout 
            android:id="@+id/group_waitapply_layout"
            android:layout_below="@+id/group_grant_layout"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/clazz_set_normal_height"
			android:clickable="true"
	    	android:background="@drawable/white_bg">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="等待审核成员"
				android:textColor="@color/black"
				android:layout_marginLeft="10dip"/>
			<TextView 
			    android:id="@+id/group_waitapply_size"
			    android:layout_toLeftOf="@+id/group_members_arrow"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dip"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/clazz_set_margin_left"
				android:text="人"
				android:textColor="@color/black"/>
		    <ImageView 
			    android:id="@+id/group_members_arrow"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginTop="10dip"
				android:layout_marginRight="@dimen/clazz_set_margin_left"
				android:src="@drawable/arrow_carrot_right"/>
		</RelativeLayout>
    </RelativeLayout>
</RelativeLayout><!-- From: file:/E:/android_studio_workspace/Web/educloud_android_sh/res/layout/activity_clazz_manage.xml -->