<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include layout="@layout/include_head" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_below="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView 
            android:id="@+id/app_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_launcher"/>
        <TextView 
            android:id="@+id/app_name"
            android:layout_toRightOf="@id/app_icon"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_detail_title"
            android:textSize="14sp"/>
        <TextView 
            android:id="@+id/app_download_count"
            android:layout_below="@id/app_name"
            android:layout_toRightOf="@id/app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/app_detail_text_normal"
            android:textSize="12sp"/>
        <Button 
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/app_detail_btn"
            />
    </RelativeLayout>
    
    <View 
        android:id="@+id/v1"
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_detail_bg"/>
    
    <HorizontalScrollView
        android:id="@+id/hsv2"
        android:layout_below="@id/v1"
	    android:layout_width="match_parent"
	    android:layout_height="250dp"
	    android:layout_centerInParent="true"
	    android:layout_centerHorizontal="true"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:paddingRight="10dp"
	    android:scrollbars="horizontal" >
	
	    <LinearLayout
	      android:id="@+id/galleryLinearLayout"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      
	      android:orientation="horizontal">
	    </LinearLayout>
	    
	</HorizontalScrollView>

    <ScrollView 
        android:id="@+id/sv3"
        android:layout_below="@id/hsv2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scrollbars="none">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:background="@color/app_detail_bg"
                android:textColor="@color/app_detail_text_normal"
                android:text="应用介绍"
                />
            <TextView
                android:id="@+id/app_desc" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                />
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:background="@color/app_detail_bg"
                android:textColor="@color/app_detail_text_normal"
                android:text="应用信息"
                />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView 
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="开发商"/>
                <TextView 
                    android:id="@+id/app_vendor"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView 
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="更新时间"/>
                <TextView 
                    android:id="@+id/app_update_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView 
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="版本号"/>
                <TextView 
                    android:id="@+id/app_version"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView 
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="大小"/>
                <TextView 
                    android:id="@+id/app_size"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <TextView 
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="兼容性"/>
                <TextView 
                    android:id="@+id/app_compliant"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                />
            </LinearLayout>
            
        </LinearLayout>
        
    </ScrollView>

</RelativeLayout><!-- From: file:/E:/android_studio_workspace/Web/educloud_android_sh/res/layout/activity_app_detail.xml -->