<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@drawable/common_list_item_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/result_name"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_test_title_margin_left"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingTop="@dimen/item_test_title_margin_top"
            android:text="考试名称：三年级期末考试"
            android:textColor="@color/item_test_title_color"
            android:textSize="@dimen/item_test_title_size" />

        <TextView
            android:id="@+id/result_max"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="@dimen/item_test_title_margin_left"
            android:paddingTop="@dimen/item_test_title_margin_top"
            android:text="最高分：90"
            android:textColor="@color/item_height_score_color"
            android:textSize="@dimen/item_test_title_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/result_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_test_title_margin_left"
            android:paddingTop="@dimen/item_test_title_margin_top"
            android:text="2012-05-05"
            android:textColor="@color/item_test_time_color"
            android:textSize="@dimen/item_test_time_size" />

        <TextView
            android:id="@+id/result_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_test_title_margin_left"
            android:paddingTop="@dimen/item_test_title_margin_top"
            android:text="均分：80"
            android:textColor="@color/item_test_type_color"
            android:textSize="@dimen/item_test_type_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/result_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_test_title_margin_left"
            android:paddingTop="@dimen/item_test_title_margin_top"
            android:text="期中期末考试"
            android:textColor="@color/item_test_type_color"
            android:textSize="@dimen/item_test_type_size" />

        <TextView
            android:id="@+id/result_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_test_title_margin_left"
            android:paddingTop="@dimen/item_test_title_margin_top"
            android:text="最低分：60"
            android:textColor="@color/item_test_type_color"
            android:textSize="@dimen/item_test_type_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_test_title_margin_left"
            android:paddingBottom="@dimen/item_test_title_margin_top"
            android:paddingTop="@dimen/item_test_title_margin_top"
            android:text="分数表 >"
            android:textColor="@color/item_score_table_color"
            android:textSize="@dimen/item_test_type_size" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/D:/as_workspace/AS_PRO1/educloud_android_sh/res/layout/adapter_clazz_score_sumary.xml -->