<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical" >
 <!-- android:background="@color/common_bg_color" -->

    <include
        android:id="@+id/rlyTitle"
        layout="@layout/include_head" />

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlyTitle" >

        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_login_relativelayout_height"
            android:layout_marginTop="15dip"
            android:visibility="visible" >

            <com.linkage.mobile72.sh.widget.CircularImage
                android:id="@+id/user_avater"
                android:layout_width="@dimen/activity_login_circularimage"
                android:layout_height="@dimen/activity_login_circularimage"
                android:layout_centerInParent="true"
                android:src="@drawable/default_user"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/user_avater_default"
                android:layout_width="100.2dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/default_user" />
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/rdp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_header"
            android:layout_marginTop="15dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rd_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/login_rd_selector"
                android:checked="true"
                android:gravity="center"
                android:text="教师"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rd_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:button="@drawable/login_rd_selector"
                android:checked="false"
                android:gravity="center"
                android:text="家长"
                android:textColor="@android:color/black" />
        </RadioGroup>

        <ImageView
            android:id="@+id/seperate_line1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rdp"
            android:layout_marginTop="15dip"
            android:background="@drawable/seperate_line_2" />

        <LinearLayout
            android:id="@+id/layout_phone"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_login_username_height"
            android:layout_below="@+id/seperate_line1"
            android:background="@color/new_login_white_blue"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2" >

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_account_focus" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="9" >

                <!-- android:maxLength="11" -->

                <EditText
                    android:id="@+id/input_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="2dip"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:hint="请输入帐号"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/input_password"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_input_pass_edittext" />

                <ImageView
                    android:id="@+id/imgDownUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:src="@drawable/login_blue_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/seperate_line2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_phone"
            android:background="@drawable/seperate_line_2" />

        <ImageView
            android:id="@+id/sep3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seperate_line2"
            android:layout_marginTop="6dp"
            android:background="@drawable/seperate_line_2" />

        <LinearLayout
            android:id="@+id/layout_password"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_login_password_height"
            android:layout_below="@+id/sep3"
            android:background="@color/new_login_white_blue"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2" >

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_password" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="9" >

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="2dip"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:nextFocusDown="@+id/login"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_input_pass_edittext" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/seperate_line3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_password"
            android:background="@drawable/seperate_line_2" />

        <!--
        <LinearLayout
            android:id="@+id/layout_ck"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_login_password_height"
            android:layout_below="@+id/seperate_line3"
