<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/toplayout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="10dp"
	        android:paddingTop="10dp"
	        android:background="@drawable/common_list_item_bg">
	
	      <com.linkage.mobile72.sh.widget.CircularImage
	            android:id="@+id/user_avater"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="20dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/default_user" /> 
			<LinearLayout 
			    android:layout_toRightOf="@+id/user_avater"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:orientation="horizontal">
			    <LinearLayout 
				    android:layout_width="0dip"
				    android:layout_weight="2"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="@dimen/common_margin_left"
				    android:orientation="vertical">
				    <TextView android:id="@+id/user_name"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textSize="@dimen/common_title_size"
				        android:textColor="@color/info_key"
				        android:text="@string/title_person_info"/>
				    <TextView android:id="@+id/user_id"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textSize="@dimen/common_title_size"
				        android:textColor="@color/info_value"
				        android:text="@string/title_person_info"/>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="0dip"
				    android:layout_weight="2"
				    android:layout_height="wrap_content"
				    android:orientation="vertical">
				    <TextView android:id="@+id/xxx"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textSize="@dimen/common_title_size"
				        android:textColor="@color/black"
				        android:text="@string/title_person_info"
				        android:visibility="invisible"/>
				    <TextView android:id="@+id/apply_to_teacher"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="right"
				        android:visibility="gone"
				        android:layout_marginRight="@dimen/common_margin_right"
				        android:textSize="@dimen/common_title_size"
				        android:textColor="@color/text_with_underline"
				        android:text="@string/title_account_apply_teacher"/>
				</LinearLayout>
			</LinearLayout>
	    </RelativeLayout>
    
    <RelativeLayout
	    android:id="@+id/relativelayout"
	    android:layout_below="@+id/toplayout"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<RelativeLayout 
            android:id="@+id/personal_info_schooltype_layout"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/clazz_set_normal_height"
			android:clickable="true"
	    	android:background="@drawable/common_list_item_bg">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/common_margin_left"
				android:layout_centerVertical="true"
				android:text="学制"
				android:textColor="@color/info_key"/>
			<TextView 
			    android:id="@+id/personal_info_schooltype_text"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="100dip"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/clazz_set_margin_left"
				android:textColor="@color/info_value"/>
		</RelativeLayout>
		<RelativeLayout 
            android:id="@+id/personal_info_school_layout"
            android:layout_below="@+id/personal_info_schooltype_layout"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/clazz_set_normal_height"
			android:clickable="true"
	    	android:background="@drawable/common_list_item_bg">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/common_margin_left"
				android:layout_centerVertical="true"
				android:text="学校"
				android:textColor="@color/info_key"/>
			<TextView 
			    android:id="@+id/personal_info_school_text"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="100dip"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/clazz_set_margin_left"
				android:textColor="@color/info_value"
				/>
		</RelativeLayout>
		<RelativeLayout 
            android:id="@+id/personal_info_grade_layout"
            android:layout_below="@+id/personal_info_school_layout"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/clazz_set_normal_height"
			android:clickable="true"
	    	android:background="@drawable/common_list_item_bg">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/common_margin_left"
				android:layout_centerVertical="true"
				android:text="年级"
				android:textColor="@color/info_key"/>
			<TextView 
			    android:id="@+id/personal_info_grade_text"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="100dip"
				android:layout_centerVertical="true"
				android:layout_marginRight="@dimen/clazz_set_margin_left"
				android:textColor="@color/info_value"/>
		</RelativeLayout>
	</RelativeLayout>

</RelativeLayout>
