<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg_color"  >
    
    <com.linkage.mobile72.sh.view.BarChartPanel
        android:id="@+id/chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        />
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:background="@color/white">
         <TextView android:id="@+id/text_daily_exercise"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center_horizontal"
        	android:textSize="14sp"
        	android:textColor="@color/black"
        	android:text="@string/daily_exercise"/>
         <TextView android:id="@+id/text_standard_test"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center_horizontal"
        	android:textSize="14sp"
        	android:textColor="@color/black"
        	android:text="@string/standard_test"/>      
    </LinearLayout>
    <LinearLayout android:id="@+id/sports_header1_layout"
   		    android:layout_width="match_parent"
   		    android:layout_height="wrap_content"
   		    android:orientation="vertical">
   		    <LinearLayout 
		       	android:layout_width="match_parent"
		       	android:layout_height="60dp"
		       	android:orientation="horizontal"
		       	android:background="@color/white">
		         <TextView android:id="@+id/text_distance_run"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:layout_gravity="center_vertical"
		        	android:gravity="center_horizontal"
		        	android:text="@string/distance_run"/>
		         <TextView android:id="@+id/text_path_pattern"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:layout_gravity="center_vertical"
		        	android:gravity="center_horizontal"
		        	android:text="@string/path_pattern"/>
		         <TextView android:id="@+id/text_ranking_list"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:layout_gravity="center_vertical"
		        	android:gravity="center_horizontal"
		        	android:text="@string/ranking_list"/>
		         <TextView android:id="@+id/text_sports_log"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:layout_gravity="center_vertical"
		        	android:gravity="center_horizontal"
		        	android:text="@string/sports_log"/>
		         <TextView android:id="@+id/text_all_test"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:layout_gravity="center_vertical"
		        	android:gravity="center_horizontal"
		        	android:text="@string/all_test"
		        	android:visibility="gone"/>
		         <TextView android:id="@+id/text_single_test"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:layout_gravity="center_vertical"
		        	android:gravity="center_horizontal"
		        	android:text="@string/single_test"
		        	android:visibility="gone"/>
		         <TextView android:id="@+id/text_test_standard"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:layout_gravity="center_vertical"
		        	android:gravity="center_horizontal"
		        	android:text="@string/test_standard"
		        	android:visibility="gone"/>
		         <TextView android:id="@+id/text_sports_log2"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:layout_gravity="center_vertical"
		        	android:gravity="center_horizontal"
		        	android:text="@string/sports_log"
		        	android:visibility="gone"/>
	        </LinearLayout>
	        <TextView android:id="@+id/text_click_option"
	       		android:layout_width="match_parent"
	       		android:layout_height="30dp"
	       		android:textColor="@color/black"
	       		android:paddingLeft="15dp"
	       		android:gravity="center_vertical"
	       		android:background="@color/common_bg_color" />
   		</LinearLayout>

</LinearLayout>
