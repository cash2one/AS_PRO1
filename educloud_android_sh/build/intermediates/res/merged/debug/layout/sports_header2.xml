<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sports_header1_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_bg_color"   >
       <LinearLayout 
       	android:layout_width="match_parent"
       	android:layout_height="60dp"
       	android:orientation="horizontal"
       	android:background="@color/white">
         <TextView android:id="@+id/text_distance_run"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center_horizontal"
        	android:text="@string/distance_run"/>
         <TextView android:id="@+id/text_path_pattern"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center_horizontal"
        	android:text="@string/path_pattern"/>
         <TextView android:id="@+id/text_ranking_list"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center_horizontal"
        	android:text="@string/ranking_list"/>
         <TextView android:id="@+id/text_all_test"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center_horizontal"
        	android:text="@string/all_test"
        	android:visibility="gone"/>
         <TextView android:id="@+id/text_single_test"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center_horizontal"
        	android:text="@string/single_test"
        	android:visibility="gone"/>
         <TextView android:id="@+id/text_test_standard"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center_horizontal"
        	android:text="@string/test_standard"
        	android:visibility="gone"/>
         <TextView android:id="@+id/text_sports_log"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_gravity="center_vertical"
        	android:gravity="center_horizontal"
        	android:text="@string/sports_log"/>
        </LinearLayout>
        <TextView android:id="@+id/text_click_option"
       		android:layout_width="match_parent"
       		android:layout_height="30dp"
       		android:textColor="@color/black"
       		android:paddingLeft="15dp"
       		android:gravity="center_vertical"
       		android:background="@color/common_bg_color" />      

</LinearLayout>
