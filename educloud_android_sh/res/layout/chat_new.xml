<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@color/common_bg_color">
	<include layout="@layout/include_head"/>
	<ListView android:id="@+id/list"
        android:cacheColorHint="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:stackFromBottom="true"
        android:transcriptMode="normal"
        android:dividerHeight="0dp"
        android:divider="#00000000"
        android:scrollbarAlwaysDrawVerticalTrack="true" 
        android:listSelector="@drawable/chat_list_selector"/>
	<RelativeLayout
        android:id="@+id/chat_bottom_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:minHeight="50dp"
	    android:gravity="bottom"
	    android:background="@drawable/chat_bottom_bg"
	    android:paddingTop="8dp"
	    android:paddingBottom="8dp">
	    <ImageButton
	        android:id="@+id/choose_voice"
	        android:layout_width="35dp"
	        android:layout_height="35dp"
	        android:layout_marginLeft="8dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentBottom="true"
	        android:background="@drawable/ic_voice"/>
	     <LinearLayout
            android:id="@+id/chat_shuru"
            android:layout_toRightOf="@+id/choose_voice"
            android:layout_toLeftOf="@+id/send_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginLeft="8dip">
		    <EditText 
		        android:id="@+id/input_message"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:minHeight="35dp"
		        android:layout_weight="1"
		        android:maxLength="200"
		        android:paddingLeft="5dp"
		        android:textColor="@color/black"
		        android:gravity="center_vertical"
		        android:layout_gravity="bottom"
		        android:background="@drawable/button_voice_bg_normal"/>
		    <Button
                android:id="@+id/btn_yuyin"
                android:visibility="gone"
                android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
                android:text="按住说话"
                android:textColor="@color/dark_gray"
                android:background="@drawable/button_voice_bg" />
          </LinearLayout>
          <LinearLayout 
              android:id="@+id/send_layout"
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true">
            <Button 
		        android:id="@+id/send_btn"
		        android:layout_width="60dp"
		        android:layout_height="35dp"
		        android:text="发送"
		        android:textColor="@color/white"
		        android:layout_marginLeft="8dp"
		        android:layout_marginRight="8dp"
		        android:background="@drawable/btn_common_selector"
		        android:visibility="gone"/>
	        <ImageButton 
		        android:id="@+id/choose_photo_image"
		        android:layout_width="35dp"
		        android:layout_height="35dp"
		        android:layout_marginLeft="8dp"
		        android:layout_marginRight="8dip"
		        android:background="@drawable/ic_more"/>
          </LinearLayout>
	</RelativeLayout>
	<include layout="@layout/face_panel"/>
	<include layout="@layout/tools_panel"/>
</LinearLayout>
