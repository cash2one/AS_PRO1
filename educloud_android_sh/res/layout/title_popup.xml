<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dip"
    android:layout_height="99dip"
    android:layout_marginTop="2dip"
    android:layout_marginLeft="2dip"
    android:background="@drawable/title_function_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mm_title_group_layout"  
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginTop="10dip"
        android:gravity="left|center_vertical"
        android:background="@drawable/title_list_selector">
        <ImageView 
            android:id="@+id/mm_title_img_group"
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/mm_title_add_group"/>
        <TextView 
            android:layout_toRightOf="@+id/mm_title_img_group"
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/mm_title_add_group"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mm_title_friend_layout" 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:background="@drawable/title_list_selector">
        <ImageView 
            android:id="@+id/mm_title_img_friend"
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/mm_title_add_friend"/>
        <TextView 
            android:layout_toRightOf="@+id/mm_title_img_friend"
            android:layout_marginLeft="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/mm_title_add_friend"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>