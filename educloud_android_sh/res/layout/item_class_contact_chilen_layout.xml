<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/local_list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="8dp" >

    <com.linkage.mobile72.sh.widget.CircularImage
        android:id="@+id/user_avater"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/default_user" />

    <TextView
        android:id="@+id/list_textshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_avater"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/user_avater"
        android:text="TextView"
        android:textColor="@color/black_little"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/list_phoneshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_textshow"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/user_avater"
        android:text="13913913999"
        android:textColor="@color/group_text"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image_group_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/expandable_groupitem"
        android:visibility="visible" />

</RelativeLayout>