<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/common_item_height_big"
    android:background="@drawable/common_list_item_bg"
    android:orientation="horizontal">
    
    <RelativeLayout 
        android:layout_width="0dip"
   	    android:layout_weight="1"
   	    android:layout_height="fill_parent"
   	    android:gravity="center">
	   	<ImageView 
	   	    android:id="@+id/avatar"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_centerVertical="true"
	   	    android:layout_margin="5dip"
	   	    android:src="@drawable/default_user"/>
   	</RelativeLayout>
   	
    <RelativeLayout 
        android:layout_width="0dip"
   	    android:layout_weight="3"
   	    android:layout_height="fill_parent"
   	    android:gravity="left|center_vertical">
	   	<TextView 
	   	    android:id="@+id/pay_school_class"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_marginLeft="5dip"
	   	    android:maxLength="10"
	   	    android:ellipsize="end"
	   	    android:text="琅琊路小学 三年级二班"
	   	    android:textColor="@color/black"/>
	   	
	   	<TextView 
	   	    android:id="@+id/pay_name"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_below="@+id/pay_school_class"
	   	    android:layout_marginLeft="5dip"
	   	    android:layout_marginTop="5dip"
	   	    android:maxLength="4"
	   	    android:ellipsize="end"
	   	    android:text="牛奶费"
	   	    android:textColor="@color/dark_gray"/>
	   	
	   	<TextView 
	   	    android:id="@+id/pay_time"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_below="@+id/pay_school_class"
	   	    android:layout_marginLeft="5dip"
	   	    android:layout_marginTop="5dip"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_marginRight="5dip"
	   	    android:text="2014.9.10截止"
	   	    android:textColor="@color/dark_gray"/>
	</RelativeLayout>
	
    <RelativeLayout 
        android:layout_width="0dip"
   	    android:layout_weight="1"
   	    android:layout_height="fill_parent"
   	    android:gravity="center_vertical">
	   	<TextView 
	   	    android:id="@+id/pay_button"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_marginLeft="5dip"
	   	    android:visibility="invisible"
	   	    android:text="GO"
	   	    android:textColor="@color/black"/>
	   	<TextView 
	   	    android:id="@+id/pay_money"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_below="@+id/pay_button"
	   	    android:layout_marginLeft="5dip"
	   	    android:text="￥100"
	   	    android:textColor="@color/red"/>
   	</RelativeLayout>
</LinearLayout>
