<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <include layout="@layout/include_head" />

    <RelativeLayout
        android:id="@+id/layout_recv_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_list_item_bg"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="短信接收家长回复的家校互动信息"
            android:textColor="@color/black_little"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/recvImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ott_setting_checkbox"  
            android:button="@null"  
            android:checked="true"/>
    </RelativeLayout>

</LinearLayout>