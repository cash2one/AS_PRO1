<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/local_list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="8dp"
    android:paddingTop="15dp" >

    <TextView
        android:id="@+id/list_textshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="TextView"
        android:textColor="@color/black_little"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/image_group_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/expandable_groupitem" />

    <CheckBox
        android:id="@+id/list_checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/select_class_item_checkbox"
        android:button="@null" />

</RelativeLayout>