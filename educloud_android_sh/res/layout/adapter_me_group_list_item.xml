<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/common_list_item_bg"
    android:orientation="horizontal">
    
    <RelativeLayout 
        android:layout_width="0dip"
   	    android:layout_weight="7"
   	    android:layout_height="fill_parent"
   	    android:gravity="center_vertical">
	   	<TextView 
	   	    android:id="@+id/me_group_name"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_centerVertical="true"
	   	    android:layout_marginLeft="20dip"
	   	    android:singleLine="true"
	   	    android:textColor="@color/black"
	   	    android:text="@string/me_ic_pwd"/>
   	</RelativeLayout>
   	
    <RelativeLayout 
        android:layout_width="0dip"
   	    android:layout_weight="2"
   	    android:layout_height="fill_parent"
   	    android:gravity="center">
	   	<ImageView 
	   	    android:id="@+id/me_group_join_ic"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_centerVertical="true"
	   	    android:layout_marginLeft="5dip"
	   	    android:src="@drawable/me_group_join"/>
	   	
	   	<TextView 
	   	    android:id="@+id/me_group_join_txt"
	   	    android:layout_toRightOf="@+id/me_group_join_ic"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_centerVertical="true"
	   	    android:layout_marginLeft="3dip"
	   	    android:singleLine="true"
	   	    android:textColor="@color/black"
	   	    android:text="@string/me_ic_pwd"/>
	</RelativeLayout>
</LinearLayout>
