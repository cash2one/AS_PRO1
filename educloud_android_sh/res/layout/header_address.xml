<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout 
        android:layout_width="fill_parent"
    	android:layout_height="@dimen/common_item_height"
    	android:background="@drawable/common_list_item_bg">
        <com.linkage.mobile72.sh.widget.CircularImage
            android:id="@+id/header_avatar"
            android:background="@drawable/find_more_friend_addfriend_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
        <TextView 
            android:layout_toRightOf="@+id/header_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_centerVertical="true"
            android:text="手机通讯录"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <View
        android:id="@+id/back"
        android:visibility="gone"
        android:layout_width="0dip"
        android:layout_height="0dip" />
    
    <View
        android:id="@+id/front"
        android:visibility="gone"
        android:layout_width="0dip"
        android:layout_height="0dip" />
</RelativeLayout>

